{
  "name": "wanamu-backend-2",
  "version": "1.0.0",
  "description": "backend for the wanamu backend",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Schnueggel/wanamu-backend-2.git"
  },
  "scripts": {
    "test": "npm run build && npm start && npm run mocha --silent && npm stop",
    "test-watch": "./node_modules/.bin/watch-exec -c \"npm run test -s\" -w source -w tests",
    "mocha": "\"./node_modules/.bin/\"mocha --compilers js:babel-register \"tests/**/*.js\"",
    "lint": "./node_modules/.bin/eslint source/*",
    "lint-watch": "./node_modules/.bin/esw -w source",
    "build": "rm -rf dist && \"./node_modules/.bin/\"babel source --out-dir dist --source-maps --extends .babelrc",
    "build-watch": "rm -rf dist && npm run build -- -w",
    "build-run": "npm run build && node dist/index.js",
    "dev-run-watch": "./node_modules/.bin/pm2 start dist/index.js --watch --name=\"api\"",
    "start": "\"./node_modules/.bin/\"pm2 start dist/index.js --name=\"api\" -i $WU_CPUS -f",
    "start-link": "npm start && npm run pm-link",
    "stop": "./node_modules/.bin/pm2 delete api",
    "pm": "./node_modules/.bin/pm2 list",
    "pm-link": "pm2 link $KEY_METRICS_KEYS api",
    "pm-show": "./node_modules/.bin/pm2 show api",
    "pm-log": "./node_modules/.bin/pm2 logs"
  },
  "homepage": "https://github.com/Schnueggel/wanamu-backend-2",
  "author": "Christian Steinmann",
  "engines": {
    "node": ">5.0.0"
  },
  "license": "ISC",
  "dependencies": {
    "bcrypt": "0.8.6",
    "bluebird": "3.4.0",
    "bunyan": "1.8.1",
    "jwt-simple": "0.5.0",
    "kerberos": "0.0.21",
    "koa": "2.0.0-alpha.3",
    "koa-bodyparser": "3.0.0",
    "koa-mount": "2.0.0",
    "koa-passport": "2.0.1",
    "koa-rewrite": "2.1.0",
    "koa-router": "7.0.0",
    "lodash": "4.13.1",
    "mongodb": "2.1.20",
    "mongoose": "4.4.19",
    "nconf": "0.8.4",
    "redis": "2.6.0-2",
    "socket.io": "1.4.6",
    "socket.io-emitter": "1.0.0",
    "socket.io-redis": "1.0.0",
    "sticky-session": "1.0.2"
  },
  "devDependencies": {
    "babel": "6.5.2",
    "babel-cli": "6.9.0",
    "babel-eslint": "6.0.4",
    "babel-preset-es2015-node5": "1.2.0",
    "babel-preset-stage-3": "6.5.0",
    "babel-register": "6.9.0",
    "eslint": "2.11.0",
    "eslint-watch": "2.1.11",
    "expect": "1.20.1",
    "mocha": "2.5.3",
    "pm2": "1.1.3",
    "socket.io-client": "1.4.6",
    "superagent": "2.0.0-alpha.3"
  }
}
