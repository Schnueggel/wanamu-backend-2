{
  "name": "wanamu-backend-2",
  "version": "1.0.0",
  "description": "backend for the wanamu backend",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Schnueggel/wanamu-backend-2.git"
  },
  "scripts": {
    "test": "npm run build && \"./node_modules/.bin/\"mocha --compilers js:babel-register \"tests/**/*.js\"",
    "test-watch": "./node_modules/.bin/watch-exec -c \"npm run test -s\" -w source -w tests",
    "lint": "./node_modules/.bin/eslint source/*",
    "lint-watch": "./node_modules/.bin/esw -w source",
    "build": "rm -rf dist && \"./node_modules/.bin/\"babel source --out-dir dist --source-maps --extends .babelrc",
    "build-watch": "rm -rf dist && npm run build -- -w",
    "build-run": "npm run build && node dist/index.js",
    "run-watch": "./node_modules/.bin/pm2 start dist/index.js --watch --no-daemon"
  },
  "homepage": "https://github.com/Schnueggel/wanamu-backend-2",
  "author": "Christian Steinmann",
  "engines": {
    "node": ">5.0.0"
  },
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^0.8.5",
    "bluebird": "^3.1.1",
    "jwt-simple": "^0.4.0",
    "kerberos": "0.0.17",
    "koa": "^2.0.0-alpha.3",
    "koa-bodyparser": "^3.0.0",
    "koa-mount": "git+https://github.com/koajs/mount#next",
    "koa-passport": "^2.0.1",
    "koa-rewrite": "git+https://github.com/koajs/rewrite#2.0.0",
    "koa-router": "^7.0.0",
    "mongodb": "^2.0.52",
    "mongoose": "^4.3.3",
    "nconf": "^0.8.2"
  },
  "devDependencies": {
    "babel": "^6.3.13",
    "babel-cli": "^6.3.17",
    "babel-eslint": "^4.1.6",
    "babel-preset-es2015-node5": "^1.1.1",
    "babel-preset-stage-3": "^6.3.13",
    "babel-register": "^6.3.13",
    "eslint": "^1.10.3",
    "eslint-watch": "^2.1.4",
    "expect": "^1.13.4",
    "mocha": "^2.3.4",
    "pm2": "^0.15.10",
    "superagent": "^1.6.1"
  }
}
