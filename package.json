{
  "name": "wanamu-backend-2",
  "version": "1.0.0",
  "description": "backend for the wanamu backend",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Schnueggel/wanamu-backend-2.git"
  },
  "scripts": {
    "test": "npm run build && \"./node_modules/.bin/\"mocha --compilers js:babel-register \"tests/**/*.js\"",
    "test-watch": "./node_modules/.bin/watch-exec -c \"npm run test -s\" -w source -w tests",
    "lint": "./node_modules/.bin/eslint source/*",
    "lint-watch": "./node_modules/.bin/esw -w source",
    "build": "rm -rf dist && \"./node_modules/.bin/\"babel source --out-dir dist --source-maps --extends .babelrc",
    "build-watch": "rm -rf dist && npm run build -- -w",
    "build-run": "npm run build && node dist/index.js",
    "dev-run-watch": "./node_modules/.bin/pm2 start dist/index.js --watch --name=\"api\"",
    "start": "./node_modules/.bin/pm2 start dist/index.js --name=\"api\"",
    "stop": "./node_modules/.bin/pm2 delete api",
    "pm": "./node_modules/.bin/pm2 list",
    "pm-log": "./node_modules/.bin/pm2 logs api"
  },
  "homepage": "https://github.com/Schnueggel/wanamu-backend-2",
  "author": "Christian Steinmann",
  "engines": {
    "node": ">5.0.0"
  },
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^0.8.5",
    "bluebird": "^3.3.3",
    "bunyan": "^1.7.0",
    "jwt-simple": "^0.4.1",
    "kerberos": "0.0.18",
    "koa": "^2.0.0-alpha.3",
    "koa-bodyparser": "^3.0.0",
    "koa-mount": "git+https://github.com/derek-duncan/mount.git",
    "koa-passport": "^2.0.1",
    "koa-rewrite": "git+https://github.com/koajs/rewrite#2.0.0",
    "koa-router": "^7.0.0",
    "lodash": "^4.5.1",
    "mongodb": "^2.1.7",
    "mongoose": "^4.4.5",
    "nconf": "^0.8.4",
    "redis": "^2.4.2",
    "socket.io": "^1.4.5",
    "socket.io-emitter": "^1.0.0",
    "socket.io-redis": "^1.0.0",
    "sticky-session": "^1.0.2"
  },
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-cli": "^6.5.1",
    "babel-eslint": "^5.0.0",
    "babel-preset-es2015-node5": "^1.1.2",
    "babel-preset-stage-3": "^6.5.0",
    "babel-register": "^6.5.2",
    "eslint": "^2.2.0",
    "eslint-watch": "^2.1.10",
    "expect": "^1.14.0",
    "mocha": "^2.4.5",
    "pm2": "^1.0.1",
    "socket.io-client": "^1.4.5",
    "superagent": "^1.8.0-beta.2"
  }
}
